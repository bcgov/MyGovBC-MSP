#!/bin/bash

echo "---> replacing configuration"
echo "USE_SPLUNK_FORWARDER=${USE_SPLUNK_FORWARDER}"
if [ "X$USE_SPLUNK_FORWARDER" = "Xtrue" ] ; then
  sed "s~%RealIpFrom%~${RealIpFrom:-172.51.0.0/16}~g; s~%HOSTNAME%~${HOSTNAME}~g; s~%IpFilterRules%~${IpFilterRules}~g; s~%AdditionalRealIpFromRules%~${AdditionalRealIpFromRules}~g; s~%HTTP_BASIC%~${HTTP_BASIC}~g; s~XXX3.*XXX4~~g; s~XXX[1-4]~~g; s~%SPLUNK_AUTH_TOKEN%~${SPLUNK_AUTH_TOKEN}~g" /tmp/nginx.conf.template > /etc/nginx/nginx.conf
else
  sed "s~%RealIpFrom%~${RealIpFrom:-172.51.0.0/16}~g; s~%IpFilterRules%~${IpFilterRules}~g; s~%AdditionalRealIpFromRules%~${AdditionalRealIpFromRules}~g; s~%HTTP_BASIC%~${HTTP_BASIC}~g; s~XXX1.*XXX2~~g; s~XXX[1-4]~~g; s~%SPLUNK_AUTH_TOKEN%~${SPLUNK_AUTH_TOKEN}~g" /tmp/nginx.conf.template > /etc/nginx/nginx.conf
fi

if [ -n "$HTTP_BASIC_USERNAME" ] && [ "$HTTP_BASIC_USERNAME" != "\${HTTP_BASIC_USERNAME}" ] && [ -n "$HTTP_BASIC_PASSWORD" ]; then
    echo "---> Generating .htpasswd file"
    `echo "$HTTP_BASIC_USERNAME:$(openssl passwd -crypt $HTTP_BASIC_PASSWORD)" > /tmp/.htpasswd`
fi

if [ -f /tmp/app/dist/Dockerfile ] ; then
  echo "---> Removing Dockerfile from nginx"
  rm -f /tmp/app/dist/Dockerfile
fi

echo "---> starting nginx"
/usr/sbin/nginx -g "daemon off;"
